<div class="column is-half">

    <article class="media box">
        <figure class="media-left">
            <p class="image is-64x64">
            <%= image_tag("Vikings_logo.jpg", :alt => "Vikings logo") %> 
            </p>
        </figure>

        <div class="media-content">
            <%= render 'posts/form' %>
        </div>
    </article>

<% @posts.each do | post | %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <%= image_tag("Vikings_logo.jpg", :alt => "Vikings logo") %> 
                </figure>
            </div>
            
            <div class="media-content">
                <div class="content">
                    <strong>Saul Belisle</strong> <br/>
                    <small>@saul_good_homie</small> <br/>
                    <p>
                        <%= post.post %>
                    </p>
                </div>
            </div>
            
            <nav class="level">
                <div class="level-left is-mobile">
                    <%= link_to post, class: "level-item" do %>
                        <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                    <% end %>
                    <%= link_to edit_post_path(post), class: "level-item" do %>
                        <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                    <% end %>
                    <%= link_to post, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } do %>
                        <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                    <% end %>
                </div>
            </nav>

        </article>
    </div>


<% end %>

</div>